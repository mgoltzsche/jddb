<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="de.algorythm.jdoe.controller.StatusController">
	<left>
		<Label fx:id="status" BorderPane.alignment="BOTTOM_LEFT"/>
	</left>
	<right>
		<HBox BorderPane.alignment="BOTTOM_RIGHT">
			<ProgressBar fx:id="progress" visible="false">
				<HBox.margin>
					<Insets top="9" right="3"/>
				</HBox.margin>
			</ProgressBar>
			<Button text="Errors">
				<HBox.margin>
					<Insets top="3" right="3" bottom="3" left="3"/>
				</HBox.margin>
			</Button>
			<Button text="Details">
				<HBox.margin>
					<Insets top="3" right="3" bottom="3" left="3"/>
				</HBox.margin>
			</Button>
		</HBox>
	</right>
</BorderPane>
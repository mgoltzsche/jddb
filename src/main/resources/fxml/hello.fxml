<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
		stylesheets="/styles/styles.css"
		fx:controller="de.algorythm.jddb.controller.HelloController"
		alignment="CENTER" hgap="10" vgap="10">
	<padding>
		<Insets bottom="20" left="20" right ="20" top="20"/>
	</padding>

	<Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
	<TextField fx:id="firstNameField" prefColumnCount="19" GridPane.rowIndex="0" GridPane.columnIndex="1" />

	<Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
	<TextField fx:id="lastNameField" prefColumnCount="19"  GridPane.rowIndex="1" GridPane.columnIndex="1" />

	<Button text="Say Hello" onAction="#sayHello" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
		<GridPane.margin>
			<Insets top="10" bottom="10"/>
		</GridPane.margin>
	</Button>
	<Label fx:id="messageLabel" styleClass="hello-message" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" />
</GridPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import de.algorythm.jdoe.ui.jfx.model.EditorStateModel?>
<?import javafx.beans.property.SimpleBooleanProperty?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
		fx:controller="de.algorythm.jdoe.controller.EntityEditorController"
		disable="${editorState.disable}">
	<fx:define>
		<EditorStateModel fx:id="editorState" />
	</fx:define>
	<top>
		<ToolBar>
			<Button text="delete" onAction="#delete"/>
			<Button text="save" onAction="#save"/>
		</ToolBar>
	</top>
	<center>
		<ScrollPane>
			<GridPane fx:id="gridPane" vgap="20" hgap="10">
				<padding>
					<Insets bottom="20" left="20" right="20" top="20"/>
				</padding>
			</GridPane>
		</ScrollPane>
	</center>
	<bottom>
		<Button text="save" onAction="#save"/>
	</bottom>
</BorderPane>